<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SiteSupervisior_Dashboard.Site_Supervisor_Dashboard">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004"
        app:title=" "
        app:titleTextColor="#fff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bricks"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Bricks"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_cement"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Cement"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/sanitary_raw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Sanitary raw"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/Sanitary_finished"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Sanitary finished"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/sariya"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Sariya"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/reti"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Reti"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/mix_sundry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Mix sundry"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/gitti"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Gitti"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/electric_raw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Electric_raw"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/electricfinish"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimary"
                android:gravity="start|center"
                android:text="Electric finish"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="serif"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="invisible"></LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>